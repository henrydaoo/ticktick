
# Server Configuration
PORT=                                    # Port number for the backend server
NODE_ENV=                               # Environment mode (development, production)
BASE_PATH=                              # Base API path prefix

# Database
MONGO_URI=                              # MongoDB connection string

# Session Configuration
SESSION_SECRET=                         # Secret key for session encryption
SESSION_EXPIRES_IN=                     # Session expiration duration

# Google OAuth Configuration
GOOGLE_CLIENT_ID=                       # Google OAuth client ID from Google Console
GOOGLE_CLIENT_SECRET=                   # Google OAuth client secret from Google Console
GOOGLE_CALLBACK_URL=                    # Backend callback URL for Google OAuth

# Frontend Configuration
FRONTEND_ORIGIN=                        # Frontend application URL for CORS
FRONTEND_GOOGLE_CALLBACK_URL=           # Frontend callback URL after Google OAuth

# Email Configuration
EMAIL_HOST=                             # SMTP server host (e.g., smtp.gmail.com)
EMAIL_PORT=                             # SMTP server port (usually 587 for TLS)
EMAIL_SECURE=                           # Use SSL/TLS (true/false)
EMAIL_USER=                             # SMTP username/email
EMAIL_PASS=                             # SMTP password or app-specific password
EMAIL_FROM=                             # Email address to send from
